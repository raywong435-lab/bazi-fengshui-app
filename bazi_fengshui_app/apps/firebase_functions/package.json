{
  "name": "firebase_functions",
  "description": "Cloud Functions for AIBaZi",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint --ext .js,.ts .",
    "test": "jest",
    "config:get": "firebase functions:config:get > .runtimeconfig.json",
    "emulators": "firebase emulators:start",
    "emulators:functions": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "firebase emulators:start",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google/generative-ai": "0.2.1",
    "bazi-calculator-by-alvamind": "1.0.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.3",
    "lunar-typescript": "1.8.6",
    "mystilight-8char": "1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0"
  },
  "private": true
}
